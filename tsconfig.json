{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", 
    "moduleResolution": "node", 
    "outDir": "./dist",
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "strict": true, 
    "declaration": true, 
    "declarationDir": "./dist/types", 
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
